    private void txtJumlahKeyPressed(java.awt.event.KeyEvent evt) {                                       
        if(evt.getKeyCode()==KeyEvent.VK_ENTER)
            btnSimpan.requestFocus();
    }
    
    private void cboProdukActionPerformed(java.awt.event.ActionEvent evt) {   
        produk = (TabelProduk)cboProduk.getSelectedItem();
        lblHarga.setText(NumberFormat.getNumberInstance().format(produk.getHarga()));
        lblSatuan.setText(produk.getSatuan());
    }    
    
    private void btnSimpanActionPerformed(java.awt.event.ActionEvent evt) {                                          
        String[] data = new String[5];
        double harga, jumlah=0;
        int qty=0;
        
        data[0]=produk.getNamaProduk();
        harga=produk.getHarga();
        data[1]=String.valueOf(produk.getHarga());
        qty=Integer.parseInt(txtJumlah.getText());
        data[2]=txtJumlah.getText();
        data[3]=produk.getSatuan();
        jumlah=harga*qty;
        data[4]=String.valueOf(jumlah);
        
        pemesanan.getTabel().addRow(data);
        lblSubtotal.setText(NumberFormat.getNumberInstance().format(pembayaran.countSubtotal()));
        
        cboProduk.requestFocus();
    }  
    
     private void btnHapusActionPerformed(java.awt.event.ActionEvent evt) {                                         
        pemesanan.getTabel().removeRow(tblProduk.getSelectedRow());
        lblSubtotal.setText(NumberFormat.getNumberInstance().format(pembayaran.countSubtotal()));
        
