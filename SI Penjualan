    private void fillComboProduk(){
        TabelProduk produk1 = new TabelProduk("R01", "Roti Manis", 4000);
        TabelProduk produk2 = new TabelProduk("R02", "Roti Susu", 5000);
        TabelProduk produk3 = new TabelProduk("R03", "Roti Coklat", 6000);
        TabelProduk produk4 = new TabelProduk("R04", "Roti Kacang", 7000);
        TabelProduk produk5 = new TabelProduk("R05", "Roti Pisang", 7000);
        TabelProduk produk6 = new TabelProduk("R06", "Roti Nanas", 7000);
        TabelProduk produk7 = new TabelProduk("R07", "Roti Keju", 8000);
        TabelProduk produk8 = new TabelProduk("R08", "Roti Abon", 8000);
        TabelProduk produk9 = new TabelProduk("R09", "Roti Sisir", 10000);
        TabelProduk produk10 = new TabelProduk("R10", "Roti Tawar",13000);
        
        cboProduk.addItem(produk1);
        cboProduk.addItem(produk2);
        cboProduk.addItem(produk3);
        cboProduk.addItem(produk4);
        cboProduk.addItem(produk5);
        cboProduk.addItem(produk6);
        cboProduk.addItem(produk7);
        cboProduk.addItem(produk8);
        cboProduk.addItem(produk9);
        cboProduk.addItem(produk10);

